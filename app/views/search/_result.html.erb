<div class='result'
     style='background-image: url("<%= result[:img] %>")'>
  <div class='text-white' style='font-size: 18px'>
    <div class='container'>
      <div class='row' style='padding-top: 5px;'>
        <div class='col-6' style='padding-left: 10px;'>
          <div class='badge' style='background-color: #4BA97A'>
            <%= result[:type].downcase %>
          </div>
        </div>
        <div class='col-6' style='padding-right: 10px; text-align: right;'>
          <%= result[:options].map{|option| option[:co2]}.min %> kg CO₂
        </div>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
  <div class='text-white' style='font-size: 23px; padding-top: 10px;'>
    <div class='container'>
      <div class='row'>
        <div class='col-6' style='padding-left: 10px;'>
          <%= result[:place] %>
        </div>
        <div class='col-6' style='padding-right: 10px; text-align: right;'>
          from <%= (result[:options].sum{|option| option[:price]} / result[:options].count).round(0) %>€
        </div>
      </div>
    </div>
  </div>
</div>
